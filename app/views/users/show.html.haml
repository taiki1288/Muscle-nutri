.container#user-show{ data: { user_id: @user.id, following_id: current_user.id}}
  .profile-card-body.text-center
    %h5.card-title.pt-3.mb-4 プロフィール
    = image_tag @user.avatar_image , class: 'profile-image mb-3'
    %p.fs-4.mb-4.fw-bold= @user.display_name
    
    .profilePage_user_have
      .profilePage_user_have_item
        = link_to followers_user_path(@user.id) do
          #follower
            フォロワー
            %span#follower-count= @user.followers.count
            人
      .profile-vertical-line 
      .profilePage_user_have_item
        = link_to following_user_path(@user.id) do
          #follow
            フォロー
            %span#following-count= @user.followings.count
            人
    - if @user != current_user
      .profilePage_user_have_item.mb-3
        .follow-btn.hidden.fw-bold.text-center
          %p フォローする
        .unfollow-btn.hidden.fw-bold.text-center
          %p フォローを外す
      .dm-btn.mb-4  
        = render "contact"

    .profile-sporting-event
      %p.introduction.mb-2 競技種目 
      %p.introduction-content= @user.profile&.sportingevent
        

    .profile-introduction.mb-4 
      %p.introduction.mb-3 自己紹介
      %p.introduction-content= @user.profile&.introduction
        
  = render 'commons/tabs'

  = render 'commons/newpostbtns'

= render 'commons/footer'
    
= javascript_pack_tag 'relation.js'
= javascript_pack_tag 'users.js'
    
        
      

      
        
        