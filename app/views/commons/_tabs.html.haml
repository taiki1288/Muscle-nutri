%ul.tabs
  %li.tabs_item.fw-bold.active
    口コミ投稿一覧
  %li.tabs_item.fw-bold
    レビュー投稿一覧

.panel-group.bg-white.rounded.hover:shadow-2xl.transition.duration-500.ease-in-out.p-6
  .panel.is-show
    - if @user.posts.any?
      .post-card
        .row
          - @user.posts.each do |post|
            .col-sm-3.d-flex
              .post-card-body
                = link_to post_path(post), class: 'post-link' do
                  - if post.image.attached?
                    = image_tag post.image, class: 'card-img-top'
                  -else
                    = image_tag 'noimage.png', class: 'card-img-top'
                  %p.post-title.text-center.no-underline.mb-3= "商品名: #{post.name}"

                  .post-avatar-name.text-center
                    = image_tag post.user.avatar_image, class: 'avatar-image'
                  .review-name
                    %p.text-left.no-underline= post.user.profile.nickname
    - else
      %p.text-center 投稿はありません
  .panel
    - if @review_list.any?
      .post-card
        .row
          - @review_list.each do |post|
            .col-sm-3.d-flex
              .post-card-body
                = link_to post_path(post), class: 'post-link' do
                  = image_tag post.image, class: 'card-img-top'
                  %p.post-title.text-center.no-underline.mb-3= "商品名: #{post.name}"

                  .post-avatar-name.text-center
                    = image_tag post.user.avatar_image, class: 'avatar-image'
                  .review-name
                    %p.no-underline= post.user.profile.nickname
    - else
      %p.text-center まだありません。